{
    "app-id": "com.github.rickybas.gtk-gist-manager",
    "branch": "master",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.rickybas.gtk-gist-manager",
    "finish-args": [
		"--socket=wayland",
		"--socket=x11",
		"--share=ipc",
		"--device=dri",
		"--socket=pulseaudio",
		"--share=network"
	],
    "modules": [
        {
            "name": "vala-gist",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/rickybas/vala-gist.git"
                }
            ]
        },
        {
            "name": "gtksourceview",
            "sources": [
                {
                    "type": "git",
                    "url": "https://git.gnome.org/browse/gtksourceview",
                    "branch": "gnome-3-24"
                }
            ]
        },
        {
			"name": "gtk-gist-manager",
			"buildsystem": "meson",
			"builddir": true,
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/rickybas/gtk-gist-manager.git"
				}
			]
		}
    ]
}
